<Window x:Class="Task_1_ADO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1_ADO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Login" HorizontalAlignment="Center" FontSize="45"/>
            <TextBox Name="LoginTXT" Height="50" FontSize="35" Width="350" Background="LightGray" BorderThickness="0" Margin="0 0 0 30"/>

            <Label Content="Password" HorizontalAlignment="Center" FontSize="45" />
            <TextBox Name="PasswordTXT" Height="50" FontSize="35" Width="350" Background="LightGray" BorderThickness="0" Margin="0 0 0 30"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="SignUp" Height="50" Width="170" Margin="0 0 20 0" Background="blue" Content="Sign Up" FontSize="30" FontWeight="UltraBlack" Click="SignUp_Click" />
                <Button Name="SignIn" Height="50" Width="170" Background="BlueViolet"  Content="Sign In" FontSize="30" FontWeight="UltraBlack" Click="SignIn_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
    
</Window>
